---
import { ViewTransitions } from 'astro:transitions';
import { CookiesProvider } from 'react-cookie'
import Navbar from '../components/Navbar';
import { getUser } from '../utils/auth';

interface Props {
	title: string;
	navbar?: boolean;
}

const { title, navbar = true } = Astro.props;

const token = Astro.cookies.get("AUTH_TOKEN");
const user = getUser(token);
---

<!doctype html>
<html lang="en">
	<head>
		<!-- META DATA -->
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- ICON -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- LINKS -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
		  rel="stylesheet"
		  href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
		/>
		<!-- CSS -->
		<link rel="stylesheet" href="/styles/global.css" media="screen"/>
		<!-- ASTRO BUILD -->
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<!-- TITLE -->
		<title>{title}</title>
	</head>
	<body>
		<CookiesProvider>
			{navbar ? <Navbar client:only="react" user={user}/> : null}
			<main class=`${navbar ? "container" : ""}`>
				<slot />
			</main>
		</CookiesProvider>
	</body>
</html>
