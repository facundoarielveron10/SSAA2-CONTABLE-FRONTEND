---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import PurcharseRequestComponent from "../components/request/PurcharseRequest";
import LayoutAuth from '../layouts/LayoutAuth';

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Pedidos de Compras - SSAA2">
	<LayoutAuth client:only="react" action="GET_PURCHASE_REQUEST">
		<PurcharseRequestComponent client:only="react"/>
	</LayoutAuth>
</Layout>
