---
// CSS
import '../css/auth/forgot.css'

// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import LayoutNotAuth from '../layouts/LayoutNotAuth.jsx';
import FormResetPassword from '../components/auth/FormResetPassword';

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (isLoggedIn(token)) {
	return Astro.redirect("/")
}
