---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import PurchaseOrderComponent from "../components/order/PurchaseOrder";
import LayoutAuth from '../layouts/LayoutAuth';

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Ordenes de Compras - SSAA2">
	<LayoutAuth client:only="react" action="GET_PURCHASE_ORDERS">
		<PurchaseOrderComponent client:only="react"/>
	</LayoutAuth>
</Layout>
