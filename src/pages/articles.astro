---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import ArticlesComponent from "../components/articles/Articles";
import LayoutAuth from '../layouts/LayoutAuth';

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Articulos - SSAA2">
	<LayoutAuth client:only="react" action="GET_ARTICLES">
		<ArticlesComponent client:only="react"/>
	</LayoutAuth>
</Layout>
