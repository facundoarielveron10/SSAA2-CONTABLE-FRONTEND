---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import ListUser from '../components/users/ListUser.jsx';
import LayoutAuth from '../layouts/LayoutAuth';

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Usuarios - SSAA2">
	<LayoutAuth client:only="react" page="users">
		<ListUser client:only="react"/>
	</LayoutAuth>
</Layout>
