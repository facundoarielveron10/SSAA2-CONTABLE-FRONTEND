---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import ListUsers from '../components/users/Users.jsx';
import LayoutAuth from '../layouts/LayoutAuth';

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Usuarios - SSAA2">
	<LayoutAuth client:only="react" action="GET_USERS">
		<ListUsers client:only="react"/>
	</LayoutAuth>
</Layout>
