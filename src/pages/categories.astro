---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import CategoriesComponent from "../components/category/Categories";
import LayoutAuth from '../layouts/LayoutAuth';

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Categorias - SSAA2">
	<LayoutAuth client:only="react" action="GET_CATEGORIES">
		<CategoriesComponent client:only="react"/>
	</LayoutAuth>
</Layout>
