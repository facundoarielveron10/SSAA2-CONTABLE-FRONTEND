---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import LayoutAuth from '../layouts/LayoutAuth';
import SeatsContent from "../components/seats/Seats";

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Asientos - SSAA2">
	<LayoutAuth client:only="react" action="GET_SEATS">
		<SeatsContent client:only="react"/>
	</LayoutAuth>
</Layout>
