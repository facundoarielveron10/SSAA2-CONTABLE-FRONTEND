---
// CSS
import '../css/auth/confirm.css'

// AUTH
import { isLoggedIn } from '../utils/auth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import FormConfirm from '../components/auth/FormConfirm.jsx';

// REDIRECT
const isAuth = Astro.cookies.get("AUTH_TOKEN");
if (isLoggedIn(isAuth)) {
	return Astro.redirect("/")
}
---

<Layout title="Confirmar Cuenta - SSAA2">
	<main class="confirm">
		<FormConfirm client:only="react"/>
	</main>
</Layout>
