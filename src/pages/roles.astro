---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import RolesComponent from "../components/roles/Roles";
import LayoutAuth from '../layouts/LayoutAuth';

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Roles - SSAA2">
	<LayoutAuth client:only="react" page="roles">
		<RolesComponent client:only="react"/>
	</LayoutAuth>
</Layout>
