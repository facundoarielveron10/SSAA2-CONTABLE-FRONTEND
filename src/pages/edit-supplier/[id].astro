---
// AUTH
import { isLoggedIn } from '../../utils/verifyAuth';

// COMPONENTS
import Layout from '../../layouts/Layout.astro';
import LayoutAuth from "../../layouts/LayoutAuth.jsx";
import Edit from "../../components/suppliers/Edit.jsx"

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}

// ID
const {id} = Astro.params;
---

<Layout title="Editar Proveedor - SSAA2">
	<LayoutAuth client:only="react" action="EDIT_SUPPLIERS">
		<Edit client:only="react" id={id}/>
	</LayoutAuth>
</Layout>
