---
// AUTH
import { isLoggedIn } from '../../utils/verifyAuth';

// COMPONENTS
import Layout from '../../layouts/Layout.astro';
import LayoutAuth from '../../layouts/LayoutAuth.jsx';
import Edit from "../../components/users/Edit.jsx";

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}

// ID
const {id} = Astro.params;
---

<Layout title="Editar Usuario - SSAA2">
	<LayoutAuth client:only="react" page="edit-user">
		<Edit client:only="react" id={id}/>
	</LayoutAuth>
</Layout>
