---
// CSS
import '@styles/auth/register.css'

// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import LayoutNotAuth from "../layouts/LayoutNotAuth.jsx";
import FormRegister from '../components/auth/FormRegister.jsx';

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (isLoggedIn(token)) {
	return Astro.redirect("/")
}
---

<Layout title="Registrarse - SSAA2" container={false}>
	<LayoutNotAuth client:only="react">
		<div class="register">
			<FormRegister client:only="react"/>
		</div>
	</LayoutNotAuth>
</Layout>
