---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import SuppliersComponent from "../components/suppliers/Suppliers";
import LayoutAuth from '../layouts/LayoutAuth';

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Proveedores - SSAA2">
	<LayoutAuth client:only="react" action="GET_SUPPLIERS">
		<SuppliersComponent client:only="react"/>
	</LayoutAuth>
</Layout>
