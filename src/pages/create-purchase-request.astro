---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import LayoutAuth from "../layouts/LayoutAuth.jsx";
import Create from "../components/request/Create.jsx";

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Pedido de Compra - SSAA2">
	<LayoutAuth client:only="react" action="CREATE_PURCHASE_REQUEST">
		<Create client:only="react"/>
	</LayoutAuth>
</Layout>
