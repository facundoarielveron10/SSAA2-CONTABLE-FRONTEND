---
// AUTH
import { isLoggedIn } from '../../utils/verifyAuth';

// COMPONENTS
import Layout from '../../layouts/Layout.astro';
import LayoutAuth from '../../layouts/LayoutAuth';
import Edit from "../../components/accounts/Edit"

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}

// ID
const {id} = Astro.params;
---

<Layout title="Editar Cuenta - SSAA2">
	<LayoutAuth client:only="react" action="EDIT_ACCOUNT">
		<Edit client:only="react" id={id}/>
	</LayoutAuth>
</Layout>
